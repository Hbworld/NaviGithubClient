<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/til_repo_owner"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_repo_owner"
                android:inputType="text"
                android:hint="@string/enter_repo_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/til_repo_name"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/til_repo_owner"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_repo_name"
                android:inputType="text"
                android:hint="@string/enter_repo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name" />

        </com.google.android.material.textfield.TextInputLayout>


        <androidx.constraintlayout.utils.widget.MotionButton
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/til_repo_name"
            android:text="@string/let_s_fetch_it"
            android:layout_margin="32dp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>